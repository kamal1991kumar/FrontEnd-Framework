        "baseUrl": ".",
        "paths": {
            "animations/*": [
                "src/js/animations/*"
            ],
            "containers/*": [
                "src/js/components/containers/*"
            ],
            "hoc/*": [
                "src/js/components/hoc/*"
            ],
            "controllers/*": [
                "src/js/controllers/*"
            ],
            "models/*": [
                "src/js/models/*"
            ],
            "modules/*": [
                "src/js/modules/*"
            ],
            "router/*": [
                "src/js/router/*"
            ],
            "services/*": [
                "src/js/services/*"
            ],
            "store/*": [
                "src/js/store/*"
            ],
            "vendors/*": [
                "src/js/vendors/*"
            ],
            "views/*": [
                "src/js/views/*"
            ],
            "utils": [
                "src/js/views/utils/index.js"
            ],
            "constants": [
                "src/js/views/constants/index.js"
            ]
        },
        "experimentalDecorators": true
    }
